{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "build active file",
			"command": "/usr/bin/clang++",
			"args": [
				"-fdiagnostics-color=always",
				"-Wall",
				"-std=c++17",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}",
				"-I${workspaceFolder}/utility",
				"-I${fileDirname}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Run main",
			"command": "${fileDirname}/${fileBasenameNoExtension}",
			"args": [],
			"options": {
				"cwd": "${fileDirname}"
			},
			"group": {
				"kind": "test",
				"isDefault": true
			}
		}
	]
}